    %link{:rel=>"stylesheet", :href=>"/style.css", :type => "text/css"}


    %title Alfadeo
    
  %body
             
    #top
      .headline
        ALFADEO
      %hr{:style=>"noshade:noshade"}
      .navi
        %ul
          %li{:class => ("selected" if /news|\/$/ =~ request.path)}
            %a{ :href => "/news" } New
          %li{:class => ("selected" if /releases/ =~ request.path )}
            %a{ :href => "/releases" } Releases
          %li{:class => ("selected" if /archive/ =~ request.path )}
            %a{ :href => "/archive" } Archive
          %li{:class => ("selected" if /dicrom/ =~ request.path )}
            %a{ :href => "/dicrom" } Dicrom
          %li{:class => ("selected" if /remixes/ =~ request.path )}
            %a{ :href => "/remixes" } Remixes
          %li{:class => ("selected" if /videos/ =~ request.path )}
            %a{ :href => "/videos" } Videos
          -#%li{:class => ("selected" if /art/ =~ request.path )}
            -#%a{ :href => "/art" } Art
          %li{:class => ("selected" if /about/ =~ request.path )}
            %a{ :href => "/about" } About
    
    #content
      = yield
    #back-top{:style => "z-index:100;position:fixed;bottom:0%;width:98%;"}
      %hr{:style => "margin-bottom:0;"}
      %a{:href => "", :style=>"text:decoration:none;color:#ccc;"}
        %img{:src => "/rect.png", :alt => "top", :style=>"width:100%;height:50px"}
      %div{:style => "margin-top:-50px;font-size:x-small;text-align:right;"}
        TOP
    :javascript
      $("#back-top").hide();
      $(function () {
        $(window).scroll(function () {
          if ($(this).scrollTop() > 1000) {
            $('#back-top').fadeIn();
          } else {
            $('#back-top').fadeOut();
          }
        });
        // scroll body to 0px on click
        $('#back-top a').click(function () {
          $('body,html').animate({
            scrollTop: 0
          }, 500);
          return false;
        });
      });  
